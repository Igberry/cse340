<header>
  <h1>CSE Motors</h1>

  <% if (locals.loggedin) { %>
    <!-- Link to account management (visible only when logged in) -->
    <a href="/account/manage" class="account-link">Welcome <%= locals.firstname || "User" %></a>
    <!-- Logout link (visible only when logged in) -->
    <a href="/account/logout" class="account-link">Logout</a>
  <% } else { %>
    <!-- When not logged in show My Account link -->
    <a href="/account/login" class="account-link">My Account</a>
  <% } %>
</header>