<%- include('../partials/head.ejs') %>
<%- include('../partials/header') %>
<%- include('../partials/navigations') %>

<h1>Account Management</h1>

<% if (message) { %>
    <p class="flash-message"><%= message %></p>
<% } %>

<h2>Welcome, <%= account.firstname %></h2>

<p>Account Type: <%= account.account_type %></p>

<a href="/account/update/<%= account.account_id %>">Update Account Information</a>

<% if (account.account_type === 'Employee' || account.account_type === 'Admin') { %>
    <h3>Inventory Management</h3>
    <p><a href="/inv">Go to Inventory Management</a></p>
<% } %>

<%- include('../partials/footer.ejs') %>
