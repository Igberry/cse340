<%- include('../partials/header.ejs') %>

<h1>Add New Inventory Item</h1>

<!-- Flash Messages -->
<% if (messages) { %>
  <p class="flash-message"><%= messages %></p>
<% } %>

<form action="/inv/add-inventory" method="POST">
  <label for="classificationList">Classification:</label>
  <%= classificationList %> <!-- Dynamic dropdown -->

  <label for="inv_make">Make:</label>
  <input type="text" name="inv_make" value="<%= inv_make || '' %>" required>

  <label for="inv_model">Model:</label>
  <input type="text" name="inv_model" value="<%= inv_model || '' %>" required>

  <button type="submit">Add Item</button>
</form>

<%- include('../partials/footer.ejs') %>
